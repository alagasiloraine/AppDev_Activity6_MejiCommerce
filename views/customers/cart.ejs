<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Helvetica Neue', sans-serif;
      padding: 20px;
    }

    h1 {
      margin-bottom: 30px;
      font-size: 2.5rem;
      text-align: center;
    }

    .navbar-text {
      font-size: 1.2rem;
    }

    .cart-items table {
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      padding: 15px;
      text-align: center;
    }

    th {
      background-color: #343a40;
      color: rgb(0, 0, 0);
    }

    td {
      background-color: #000000;
    }

    .btn-dark {
      margin: 10px;
    }

    .total-price {
      text-align: right;
      font-size: 1.5rem;
      margin-top: 20px;
    }

    #checkout-button {
      display: block;
      width: 100%;
      margin: 20px 0;
      padding: 10px;
      font-size: 1.2rem;
    }

    p {
      text-align: center;
      font-size: 1.2rem;
      color: #6c757d;
    }

    @media (max-width: 576px) {
      h1 {
        font-size: 2rem;
      }

      th, td {
        font-size: 0.9rem;
      }

      .total-price {
        font-size: 1.2rem;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <% if (user) { %>
      <div class="d-flex justify-content-end mb-3">
        <span class="navbar-text text-dark me-3">Welcome, <%= user.username %>!</span>
        <a href="/logout" class="btn btn-dark">Logout</a>
      </div>
    <% } else { %>
      <div class="d-flex justify-content-end mb-3">
        <a href="/register" class="btn btn-dark me-2">Register</a>
        <a href="/login" class="btn btn-dark">Login</a>
      </div>
    <% } %>

    <h1>Your Cart</h1>

    <div class="cart-items">
      <% if (cartItems.length > 0) { %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <% cartItems.forEach(item => { %>
          <tr>
            <td><%= item.prodname %></td>
            <td>Php <%= item.price %></td>
            <td><%= item.quantity %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <div class="total-price">
        <h3>Total Price: Php <%= totalPrice %></h3>
      </div>
      <button id="checkout-button" class="btn btn-success">Checkout</button>
      <% } else { %>
      <p>Your cart is empty!</p>
      <% } %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

  <script>
    $(document).ready(function() {
      $('#checkout-button').on('click', function() {
        $.ajax({
          url: '/customers/checkout',
          type: 'POST',
          success: function(response) {
            alert(response.message);
            window.location.href = '/product'; 
          },
          error: function(xhr) {
            alert(xhr.responseJSON.error);
          }
        });
      });
    });
  </script>
</body>

</html>
