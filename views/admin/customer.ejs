<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customers</title>
  <link rel="stylesheet" href="/css/adminstyle.css" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

  <style>
    body {
        font-size: 0.9rem;
    }

    .card {
        border: none;
        border-radius: 10px;
        padding: 20px;
        width: 165%; 
        margin: 0 auto;
        box-sizing: border-box; 
    }

    .card-header {
        background-color: #9cc388;
        color: white;
        border-top-left-radius: 15px !important;
        border-top-right-radius: 15px !important;
    }

    .table {
        margin-bottom: 0;
        font-size: 0.85rem; 
    }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        color: #4a5568;
    }

    .table td {
        vertical-align: middle;
        font-size: 0.8rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5f9;
    }

    .role-badge {
        background-color: #e6f4ea;
        color: #34a853;
        border-radius: 16px;
        padding: 6px 12px;
        font-size: 0.8rem;
        font-weight: 500;
        display: inline-block;
        text-transform: uppercase;
    }

    .table-responsive {
        max-height: 85vh; 
        overflow-y: auto;
    }

    .divider {
        height: 1px;
        background-color: #e2e8f0;
        margin: 0;
    }

    * {
        box-sizing: border-box;
    }
  </style>
</head>
<body>
  <div class="d-flex">
    <div class="sidebar">
      <div class="logo">
        <img src="/img/mejicoMD-logo.png" alt="Mejico MD Medical Spa Logo" class="logo-img" />
        <h2 class="logo-text">Mejico MD Medical Spa</h2>
      </div>

      <ul>
        <li>
          <a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a>
        </li>
        <li>
          <a href="/admin/products"><i class="fa-solid fa-cart-shopping"></i> <span>Products</span></a>
        </li>
        <li>
          <a href="/admin/category"><i class="fa-solid fa-list"></i>
            <span>Category</span></a>
        </li> 
        <li>
          <a href="/admin/orders"><i class="fas fa-box"></i> <span>Orders</span></a>
        </li>
        <li>
          <a href="/admin/customers"><i class="fas fa-users"></i> <span>Customers</span></a>
        </li>
        <li>
          <a href="/logout"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
        </li>
      </ul>
    </div>

    <div class="main-content">
      <div class="header">
        <h1><i class="fas fa-users"></i> Customers</h1>
      </div>
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Customer List</h2>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Role</th>
                </tr>
              </thead>
              <tbody>
                <% if (users.length > 0) { %>
                  <% users.forEach(user => { %>
                    <tr>
                      <td><%= user.user_id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.username %></td>
                      <td><%= user.email %></td>
                      <td><span class="role-badge"><%= user.role %></span></td>
                    </tr>
                    <tr><td colspan="5" class="p-0"><hr class="divider"></td></tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="5">No users found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
