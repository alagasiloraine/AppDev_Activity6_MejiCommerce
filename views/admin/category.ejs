<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Categories</title>
  <link rel="stylesheet" href="/css/adminstyle.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

  <style>
    body {
      display: flex;
      height: 100vh;
      margin: 0;
    }

    .container {
      flex-grow: 1;
      padding: 20px;
      margin-left: 250px;
    }

    .table-responsive {
      margin-top: 20px; 
    }

    .table th, .table td {
      text-align: center; 
    }
  </style>
</head>
<body>

  <div class="sidebar">
    <div class="logo">
      <img src="/img/mejicoMD-logo.png" alt="Mejico MD Medical Spa Logo" class="logo-img" />
      <h2 class="logo-text">Mejico MD Medical Spa</h2>
    </div>

    <ul>
      <li>
        <a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a>
      </li>
      <li>
        <a href="/admin/products"><i class="fa-solid fa-cart-shopping"></i><span>Products</span></a>
      </li>
      <li>
        <a href="/admin/category"><i class="fa-solid fa-list"></i><span>Category</span></a>
      </li>        
      <li>
        <a href="/admin/order"><i class="fas fa-box"></i> <span>Orders</span></a>
      </li>
      <li>
        <a href="/admin/customer"><i class="fas fa-users"></i> <span>Customers</span></a>
      </li>
      <li>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
      </li>
    </ul>
  </div>

  <div class="container">
    <div class="header">
      <h1><i class="fa-solid fa-list"></i> Manage Categories</h1>
    </div>
    
    <form action="/admin/category" method="POST" class="row g-3 mb-4">
      <div class="col-md-8">
        <input type="text" name="catname" class="form-control" placeholder="Enter Category Name" required>
      </div>
      <div class="col-md-4 d-grid">
        <button type="submit" class="btn" style="background-color: #87aa7c; color: #ffffff; border: none;">Add Category</button>
      </div>      
    </form>

    <div class="table-responsive">
      <table class="table table-bordered table-hover" style="background-color: #d4edda; color: #000;">
        <thead style="background-color: #a5d8a5; color: #fff;">
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th> 
          </tr>
        </thead>
        <tbody>
          <% if (categories.length > 0) { %>
            <% categories.forEach(category => { %>
              <tr>
                <td><%= category.cat_id %></td>
                <td><%= category.catname %></td>
                <td>
                  <form action="/admin/category/<%= category.cat_id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this category?');">
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>                               
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center">No categories found</td> 
            </tr>
          <% } %>
        </tbody>        
      </table>
    </div>       
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
