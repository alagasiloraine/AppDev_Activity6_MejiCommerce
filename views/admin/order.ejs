<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/adminstyle.css">
</head>
<body>
    <div class="dashboard">
        <div class="sidebar">
            <div class="logo">
                <img src="/img/mejicoMD-logo.png" alt="Mejico MD Medical Spa Logo" class="logo-img">
                <h2 class="logo-text">Mejico MD Medical <br> Spa</h2>
            </div>
        
            <ul>
                <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a></li>
                <li><a href="/admin/products"><i class="fa-solid fa-cart-shopping"></i> <span>Products</span></a></li>
                <li><a href="/admin/category"><i class="fa-solid fa-list"></i><span>Category</span></a></li> 
                <li><a href="/admin/order"><i class="fas fa-box"></i> <span>Orders</span></a></li>
                <li><a href="/admin/customer"><i class="fas fa-users"></i> <span>Customers</span></a></li>
                <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a></li>
            </ul>
        </div> 

        <div class="main-content">
            <div class="header">
                <h1><i class="fas fa-cart-shopping"></i> Orders</h1>
                <div class="search-container">
                    <input type="text" id="searchInput" placeholder="Search by Customer or Product..." onkeyup="searchOrders()">
                </div>
            </div>

            <div class="table-section-order">
                <h3><i class="fas fa-table"></i> Current Orders</h3>
                <table id="ordersTable">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag"></i> Order ID</th>
                            <th><i class="fas fa-user"></i> Customer</th>
                            <th><i class="fas fa-box"></i> Product</th>
                            <th><i class="fas fa-dollar-sign"></i> Price</th>
                            <th><i class="fas fa-calendar"></i> Date</th>
                            <th><i class="fas fa-flag"></i> Status</th> 
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <% if (Array.isArray(orders) && orders.length > 0) { %>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td><%= order.order_id %></td>
                                    <td><%= order.name %></td>
                                    <td><%= order.prodname %></td>
                                    <td><%= Number(order.price).toFixed(2) %></td>
                                    <td><%= new Date(order.created_at).toLocaleDateString() %></td>
                                    <td><%= order.status %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6">No orders found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <div class="pagination-order">
                    <button id="prevBtn" onclick="changePage(-1)" disabled>Prev</button>
                    <button id="nextBtn" onclick="changePage(1)">Next</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentPage = 1;
        const rowsPerPage = 5; 
        let filteredOrders = [...document.querySelectorAll('#tableBody tr')];

        function displayTable() {
            const tableBody = document.getElementById('tableBody');
            tableBody.innerHTML = ''; 
            const startIndex = (currentPage - 1) * rowsPerPage;
            const endIndex = startIndex + rowsPerPage;
            const paginatedOrders = filteredOrders.slice(startIndex, endIndex);

            paginatedOrders.forEach(orderRow => {
                tableBody.appendChild(orderRow);
            });

            document.getElementById('prevBtn').disabled = currentPage === 1;
            document.getElementById('nextBtn').disabled = endIndex >= filteredOrders.length;
        }

        function changePage(direction) {
            currentPage += direction;
            displayTable();
        }

        function searchOrders() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            filteredOrders = [...document.querySelectorAll('#tableBody tr')].filter(orderRow => {
                const cells = orderRow.querySelectorAll('td');
                const customerName = cells[1].textContent.toLowerCase();
                const productName = cells[2].textContent.toLowerCase();
                return customerName.includes(searchInput) || productName.includes(searchInput);
            });
            currentPage = 1; 
            displayTable();
        }
    </script>
</body>
</html>
