<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce Admin Dashboard</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<style>
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #fafcf9;
    color: #2a3a13;
}

.dashboard {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

header {
    background-color: #91bd78;
    color: #fafcf9;
    padding: 20px;
    text-align: center;
}

h1 {
    margin: 0;
}

main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.widget {
    background-color: #c9ddbd;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

h2 {
    color: #2a3a13;
    margin-top: 0;
    margin-bottom: 15px;
}

canvas {
    max-width: 100%;
    height: auto;
}

#checkoutStats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
}

.stat-item {
    background-color: #9cc388;
    border-radius: 4px;
    padding: 10px;
    text-align: center;
}

.stat-value {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 5px;
}

.stat-label {
    font-size: 14px;
}
</style>
<body>
    <div class="dashboard">
        <header>
            <h1>E-commerce Admin Dashboard</h1>
        </header>
        <main>
            <section class="widget" id="most-purchased">
                <h2>Most Purchased Products</h2>
                <canvas id="purchaseChart"></canvas>
            </section>
            <section class="widget" id="most-reviewed">
                <h2>Most Reviewed Products</h2>
                <canvas id="reviewChart"></canvas>
            </section>
            <section class="widget" id="product-status">
                <h2>Product Status</h2>
                <canvas id="statusChart"></canvas>
            </section>
            <section class="widget" id="checkout-stats">
                <h2>Checkout Statistics</h2>
                <div id="checkoutStats"></div>
            </section>
        </main>
    </div>
    <script>
        // Sample data (replace with real data from your backend)
const mostPurchased = {
    labels: ['Product A', 'Product B', 'Product C', 'Product D', 'Product E'],
    data: [120, 90, 80, 70, 60]
};

const mostReviewed = {
    labels: ['Product X', 'Product Y', 'Product Z', 'Product W', 'Product V'],
    data: [50, 45, 40, 35, 30]
};

const productStatus = {
    labels: ['In Stock', 'Low Stock', 'Out of Stock'],
    data: [60, 30, 10]
};

const checkoutStats = {
    totalCheckouts: 1250,
    averageOrderValue: 85,
    conversionRate: 3.2,
    abandonedCarts: 150
};

// Create charts
function createChart(ctx, type, labels, data, label) {
    return new Chart(ctx, {
        type: type,
        data: {
            labels: labels,
            datasets: [{
                label: label,
                data: data,
                backgroundColor: ['#91bd78', '#9cc388', '#c9ddbd', '#2a3a13', '#fafcf9'],
                borderColor: '#2a3a13',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
}

// Initialize charts
document.addEventListener('DOMContentLoaded', () => {
    const purchaseCtx = document.getElementById('purchaseChart').getContext('2d');
    const reviewCtx = document.getElementById('reviewChart').getContext('2d');
    const statusCtx = document.getElementById('statusChart').getContext('2d');

    createChart(purchaseCtx, 'bar', mostPurchased.labels, mostPurchased.data, 'Number of Purchases');
    createChart(reviewCtx, 'bar', mostReviewed.labels, mostReviewed.data, 'Number of Reviews');
    createChart(statusCtx, 'pie', productStatus.labels, productStatus.data, 'Product Status');

    // Populate checkout stats
    const checkoutStatsElement = document.getElementById('checkoutStats');
    checkoutStatsElement.innerHTML = `
        <div class="stat-item">
            <div class="stat-value">${checkoutStats.totalCheckouts}</div>
            <div class="stat-label">Total Checkouts</div>
        </div>
        <div class="stat-item">
            <div class="stat-value">$${checkoutStats.averageOrderValue}</div>
            <div class="stat-label">Average Order Value</div>
        </div>
        <div class="stat-item">
            <div class="stat-value">${checkoutStats.conversionRate}%</div>
            <div class="stat-label">Conversion Rate</div>
        </div>
        <div class="stat-item">
            <div class="stat-value">${checkoutStats.abandonedCarts}</div>
            <div class="stat-label">Abandoned Carts</div>
        </div>
    `;
});
    </script>
</body>
</html>